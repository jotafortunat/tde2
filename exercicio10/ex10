
#include <stdio.h>
#include <ctype.h>

int main() {
    char str[100];
    int letras = 0, digitos = 0, especiais = 0;

    printf("Digite uma string: ");
    fgets(str, sizeof(str), stdin);
    str[strcspn(str, "\n")] = '\0'; // Remover nova linha

    for (int i = 0; str[i] != '\0'; i++) {
        if (isalpha(str[i])) {
            letras++;
        } else if (isdigit(str[i])) {
            digitos++;
        } else {
            especiais++;
        }
    }

    printf("Letras: %d, DÃ­gitos: %d, Caracteres especiais: %d\n", letras, digitos, especiais);

    return 0;
}
 
